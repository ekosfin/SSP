<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83cc83"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#216c2a"
        app:srcCompat="@drawable/baseline_arrow_back_black_18dp" />

    <EditText
        android:id="@+id/add_account_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="#539b55"
        android:ems="10"
        android:hint="Anna tilille nimi"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/add_account_type"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#539b55"
        android:ems="10"
        android:hint="Anna tilille typpi"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/add_account_number"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#539b55"
        android:ems="10"
        android:hint="Anna tilille numero"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button

        android:id="@+id/cardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#216c2a"
        android:layout_marginTop="10dp"
        android:text="Lisää tili" />


</LinearLayout>