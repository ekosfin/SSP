<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/account_parrent_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kortin nimi"
        android:id="@+id/textCardName"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:textSize="17sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kortin tyyppi"
        android:id="@+id/textCardType"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/textCardName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W limit"
        android:id="@+id/textWlimit"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/textCardType"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U limit"
        android:id="@+id/textUlimit"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:layout_toEndOf="@+id/textWlimit"
        />

</RelativeLayout>